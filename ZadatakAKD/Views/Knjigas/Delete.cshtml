@model ZadatakAKD.Models.Knjiga

@{
    ViewData["Title"] = "Izbriši knjigu";
}

<h1>Izbriši</h1>

<h3>Jeste li sigurni da želite obrisati ovu knjigu?</h3>
<div>
    <h4>Knjiga</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GodinaIzdavanja)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GodinaIzdavanja)
        </dd>
